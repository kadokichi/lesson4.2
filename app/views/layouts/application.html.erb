<!DOCTYPE html>
<html>
  <head>
    <title>Myreserve</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    
  </head>

  <body>
    <header>
     <h1>
      <%= link_to "Myreserve", "/",class:"topTag" %>
     </h1>
     <% if user_signed_in? %>
      <div class="dropdown">
       <a class="btn btn-info dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
        <% if current_user.image.attached? %>
          <%= image_tag current_user.image, size: "50x50" %>
        <% else %>
          <%= image_tag 'default-user.png', size: "50x50" %>
        <% end %>
          <%= current_user.name%>
       </a>

       <ul class="dropdown-menu">
        <li><%= link_to "アカウント設定", :users, class: "dropdown-link" %></li>
        <li><%= link_to "施設の新規登録", new_room_url, class: "dropdown-link" %></li>
        <li><%= link_to "予約済み一覧", :reservations, class: "dropdown-link" %></li>
        <li><%= link_to "登録済み施設一覧", :rooms, class: "dropdown-link" %></li>
        <li><%= link_to "ログアウト", destroy_user_session_path, method: :delete, class: "dropdown-link" %></li>
       </ul>
     </div>
    <% else %>
     <div class="noLogin">
      <%= link_to "ログイン", new_user_session_path, class: 'post', class: "btn btn-primary" %> 
      <%= link_to "新規登録", new_user_registration_path, class: 'post', class: "btn btn-success" %> 
     </div>
    <% end %>
    </header>

    <div class="containner">
      <%= yield %>
    </div>

    <footer>
     <h1>
      <%= link_to "Myreserve", "/", class:"topTag" %>
     </h1>
     <p>Copyright © Myreserve 2023 All rights reserved</p>
    </footer>
  </body>
</html>
