<table>
        <% if @room.image.attached? %>
          <%= image_tag @room.image %>
        <% else %>
          <%= image_tag 'default-room.png' %>
        <% end %>
        <tr>
          <td><%= @room.name %></td>
        </tr>

        <tr>
          <td><%= @room.price %></td>
        </tr>

        <tr>
          <td><%= @room.address %></td>
        </tr>

        <tr>
          <td><%= @room.description %></td>
        </tr>
</table>

        <%= form_with model: @reservation, method: :post, url: confirm_reservations_path do |f| %>
          <table>
            
            <tr>
              <th><%= f.label :check_in, "チェックイン" %></th>
              <td><%= f.date_field :check_in %></td>
            </tr>
    
            <tr>
              <th><%= f.label :check_out, "チェックアウト" %></th>
              <td><%= f.date_field :check_out %></td>
            </tr>
    
            <tr>
              <th><%= f.label :person, "人数" %></th>
              <td><%= f.text_field :person %></td>
            </tr>

            <%= f.hidden_field :user_id, value: current_user.id %>
            <%= f.hidden_field :room_id, value: @room.id %>
            <%= f.hidden_field :sum_price, value: @room.price %>

            
          </table>

          <%= f.submit"予約する" %> 
        
        <% end %>

      

        

