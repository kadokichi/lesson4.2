<h3>登録済み施設一覧</h3>

<table>
      <thead>
        <tr>
        <th>画像</th>
        <th>施設名</th>
        <th>紹介文</th>
        <th>料金</th>
        <th>作成日</th>
        </tr>
      </thead>
    
      <tbody>
        <% current_user.rooms.each do |room| %>
        <tr>
            <td>
            <% if room.image.attached? %>
              <%= image_tag room.image %>
            <% else %>
              <%= image_tag 'default-room.png' %>
            <% end %>
            </td>
            <td><%= link_to room.name, room %></td>
            <td><%= room.description %></td>
            <td><%= room.price %></td>
            <td><%= room.created_at %></td>
            <td>
                <%= link_to "詳細", room %>
            </td>
        </tr>
        <% end %>
      </tbody>
    </table>