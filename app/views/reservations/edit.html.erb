<h3>再予約</h3>

<table>
<tr>
  <td>
    <% if @reservation.room.image.attached? %>
        <%= image_tag @reservation.room.image %>
    <% else %>
        <%= image_tag 'default-room.png' %>
    <% end %>
  </td>
</tr>

<tr>
    <td><%= @reservation.room.name %></td>
</tr>

<tr>
    <td><%= @reservation.room.address %></td>
</tr>

<tr>
    <td><%= @reservation.room.description %></td>
</tr>

<tr>
    <td>¥<%= @reservation.sum_price %></td>
</tr>
        
</table>

<%= form_with model: @reservation, method: :post, url: confirm_reservations_path do |f| %>
    <table>
      
      <tr>
        <th><%= f.label :check_in, "チェックイン" %></th>
        <td><%= f.date_field :check_in %></td>
      </tr>

      <tr>
        <th><%= f.label :check_out, "チェックアウト" %></th>
        <td><%= f.date_field :check_out %></td>
      </tr>

      <tr>
        <th><%= f.label :person, "人数" %></th>
        <td><%= f.text_field :person %></td>
      </tr>

      <%= f.hidden_field :user_id, value: current_user.id %>
      <%= f.hidden_field :room_id, value: @reservation.room_id %>
      <%= f.hidden_field :sum_price, value: @reservation.room.price %>
    
      
    </table>

    <%= f.submit"再予約する" %> 
  
  <% end %>