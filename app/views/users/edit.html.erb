<h3>ユーザー設定</h3>

<%= link_to "アカウント", :users %>
<%= link_to "プロフィール", current_user %>
<h4>プロフィール</h4>

<%= form_with model: @user do |f| %>
<table>
    <tr>
        <th><%= f.label :image, "アイコン画像" %></th>
        <td>
        <% if current_user.image.attached? %>
            <%= image_tag current_user.image %>
        <% else %>
            <%= image_tag 'default-user.png' %>
        <% end %>
        </td>
        <td><%= f.file_field :image %></td>
    </tr>

    <tr>
        <th><%= f.label :name, "名前" %></th>
        <td><%= f.text_field :name %></td>
    </tr>

    <tr>
        <th><%= f.label :introduce, "自己紹介" %></th>
        <td><%= f.text_area :introduce %></td>
    </tr>


</table>

<%= link_to "キャンセル", current_user %>
<%= f.submit "保存" %>

<% end %>