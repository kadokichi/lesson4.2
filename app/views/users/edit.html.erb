
<%= render "shared/error", obj: @user %>

<div class="userContainner">
<h2>ユーザー設定</h2>

<div class="userButton">
    <%= link_to "アカウント", :users, class:"btn btn-outline-info btn-lg" %>
    <%= link_to "プロフィール", current_user, class:"btn btn-outline-warning btn-lg" %>
</div>

<h3>プロフィール</h3>

  <div class="userEdit">
    <%= form_with model: @user do |f| %>
        <table>
            <tr>
                <th><%= f.label :image, "アイコン画像" %></th>
                <td>
                    <% if current_user.image.attached? %>
                        <%= image_tag current_user.image, size: "70x70" %>
                    <% else %>
                        <%= image_tag 'default-user.png', size: "70x70" %>
                    <% end %>
                    <%= f.file_field :image %>
                </td>
            </tr>

            <tr>
                <th><%= f.label :name, "名前" %></th>
                <td><%= f.text_field :name %></td>
            </tr>

            <tr>
                <th><%= f.label :introduce, "自己紹介" %></th>
                <td><%= f.text_area :introduce, size: "35" %></td>
            </tr>

        </table>

        <%= link_to "キャンセル", current_user, class: "btn btn-secondary btn-lg" %>
        <%= f.submit "更新する",class: "btn btn-success btn-lg" %>

    <% end %>
  </div>
</div>
